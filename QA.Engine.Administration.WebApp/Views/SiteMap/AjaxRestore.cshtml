@using QA.Core.Web
@model QA.Engine.Administration.WebApp.Models.SiteMap.RestoreSiteMapViewModel

<div>
    @using (Html.BeginForm(MVC.SiteMap.ActionNames.AjaxRestoreItem, MVC.SiteMap.Name, FormMethod.Post, new { id = "RestoreForm" }))
    {
        <div>
            <div>
                <div class="editor-label">
                    @Html.LabelFor(x => x.IsRestoreAllVersions)
                </div>
                <div class="editor-field">
                    @Html.CheckBox("IsRestoreAllVersions", Model.IsRestoreAllVersions ?? false)
                </div>
            </div>
        </div>
        <div>
            <div>
                <div class="editor-label">
                    @Html.LabelFor(x => x.IsRestoreAllChildren)
                </div>
                <div class="editor-field">
                    @Html.CheckBox("IsRestoreAllChildren", Model.IsRestoreAllChildren ?? false)
                </div>
            </div>
        </div>
        <div>
            <div>
                <div class="editor-label">
                    @Html.LabelFor(x => x.IsRestoreWidgets)
                </div>
                <div class="editor-field">
                    @Html.CheckBox("IsRestoreWidgets", Model.IsRestoreWidgets ?? false)
                </div>
            </div>
        </div>
        <div>
            <div>
                <div class="editor-label">
                    @Html.LabelFor(x => x.IsRestoreContentVersions)
                </div>
                <div class="editor-field">
                    @Html.CheckBox("IsRestoreContentVersions", Model.IsRestoreContentVersions ?? false)
                </div>
            </div>
        </div>
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.IsVersion)
        @Html.HiddenFor(x => x.IsPage)
        <div class="margin-top-5">
            <button class="k-button" id="btnDelete" type="submit">@this.LocalResources("RestoreButton")</button>
            <button class="k-button" id="btnCancel" type="button">@this.LocalResources("CancelButton")</button>
        </div>
    }
</div>
